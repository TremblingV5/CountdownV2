{
  "manifest_version": 3,
  "name": "965Happy",
  "description": "965Happy",
  "version": "1.0",
  "icons": {
    "16": "images/icon16.svg",
    "48": "images/icon48.svg",
    "128": "images/icon128.svg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.svg",
      "48": "images/icon48.svg",
      "128": "images/icon128.svg"
    }
  },
  "permissions": ["storage", "tabs", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["timeUtils.js", "redirect.js"],
      "run_at": "document_start",
      "all_frames": true,
      "exclude_matches": ["*://*/countdown.html", "*://*/popup.html"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["countdown.html", "countdown.js"],
      "matches": ["<all_urls>"]
    }
  ]
}